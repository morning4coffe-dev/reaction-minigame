<Page
    x:Class="Uno.ReactionMinigame.SignInPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Uno.ReactionMinigame"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox MinWidth="320" TextAlignment="Center" FontSize="32" Padding="16"
            x:Name="NameTextBox"
            Margin="10"
            PlaceholderText="Your name" />
        <TextBox TextAlignment="Center" FontSize="20"
            x:Name="EmailTextBox"
            Margin="10"
            PlaceholderText="Your e-mail" />
        <Button Height="80" Width="80" CornerRadius="40" Style="{StaticResource AccentButtonStyle}" FontSize="24" HorizontalAlignment="Center"
            Margin="10"
            Click="OnSubmitClicked"
            Content="Start" />
    </StackPanel>
</Page>