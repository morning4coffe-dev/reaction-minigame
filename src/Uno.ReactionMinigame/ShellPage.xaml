<Page
    x:Class="Uno.ReactionMinigame.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Uno.ReactionMinigame"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource TechoramaYellow}"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/basketball-court.png" Stretch="UniformToFill" />
        </Grid.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel
                Padding="8"
                Background="#2c6090"
                BorderBrush="#2c6090"
                BorderThickness="0,0,0,4"
                Spacing="8">
                <StackPanel
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="16">
                    <Image Width="240" Source="ms-appx:///Assets/techorama.png" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="40"
                        Foreground="White"
                        Text="+" />
                    <Image Width="240" Source="ms-appx:///Assets/unologo.png" />
                </StackPanel>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="30"
                    FontWeight="Black"
                    Foreground="White"
                    Text="Reaction Challenge" />
            </StackPanel>

            <Grid Grid.Row="1" Padding="20">
                <Frame x:Name="MainFrame" />
            </Grid>

            <Grid Grid.Column="1" Background="{ThemeResource TechoramaBlue}">
                <StackPanel Padding="12" Spacing="4">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Leaderboard" />

                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        Foreground="White"
                        Text="#1" />
                    <TextBlock
                        x:Name="CurrentWinnerTextBlock"
                        HorizontalAlignment="Center"
                        FontSize="30"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{x:Bind LeaderboardViewModel.CurrentBest.Name, Mode=OneWay}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Grid>

            <Grid
                x:Name="Leaderboard"
                Grid.Row="1"
                Grid.Column="1"
                BorderBrush="#2c6090"
                BorderThickness="4,0,0,0">
                <!--  Leaderboard goes here  -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>


                <Grid Grid.Row="1">
                    <ListView ItemsSource="{x:Bind LeaderboardViewModel.Leaderboard, Mode=OneWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:LeaderboardItemViewModel">
                                <Grid ColumnSpacing="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32" />
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        FontWeight="Bold"
                                        Text="{x:Bind Order}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        FontSize="12"
                                        Text="{x:Bind Name}"
                                        TextTrimming="CharacterEllipsis"
                                        ToolTipService.ToolTip="{x:Bind Email}" />
                                    <TextBlock
                                        Grid.Column="2"
                                        FontSize="12"
                                        Text="{x:Bind Time, Converter={StaticResource TimeSpanToStringConverter}}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
