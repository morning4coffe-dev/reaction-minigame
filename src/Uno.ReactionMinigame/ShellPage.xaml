<Page
    x:Class="Uno.ReactionMinigame.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Uno.ReactionMinigame"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/basketball-court.png" />
        </Grid.Background>
        <Grid Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="320" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel
                Padding="8"
                Background="#2c6090"
                BorderBrush="Black"
                BorderThickness="0,0,0,4"
                Spacing="16">
                <StackPanel
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="16">
                    <Image Width="240" Source="ms-appx:///Assets/techorama.png" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="40"
                        Text="+" />
                    <Image Width="240" Source="ms-appx:///Assets/unologo.png" />
                </StackPanel>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="30"
                    FontWeight="Black"
                    Text="Reaction Challenge" />
            </StackPanel>

            <Frame x:Name="MainFrame" Grid.Row="1" />

            <Grid
                x:Name="Leaderboard"
                Grid.RowSpan="2"
                Grid.Column="1"
                BorderBrush="Black"
                BorderThickness="4,0,0,0">
                <!--  Leaderboard goes here  -->
            </Grid>
        </Grid>
    </Grid>
</Page>
